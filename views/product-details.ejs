<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Elegant Product Card</title>
  <link rel="stylesheet" href="/output.css">
</head>

<body class="bg-gray-100">
  <!-- Navbar -->
  <%- include('./partials/navbar.ejs') %>

    <div class=" text-white flex items-center justify-center max-h-screen pt-20">
      <!-- Product Card -->
      <% product.map((product)=> { %>
        <div
          class="relative bg-gradient-to-b from-gray-900 to-black rounded-lg shadow-lg hover:shadow-2xl overflow-hidden w-full max-w-lg">
          <!-- Product Image -->

          <div class="relative group">
            <a href="/product-details">
              <img src="<%= product.productURL  %>" alt="Product Image"
                class="w-full h-64 object-cover transform group-hover:scale-110 transition-transform duration-500 ease-in-out">
            </a>
            <div class="absolute top-3 left-3 bg-white text-black text-xs font-bold px-3 py-1 rounded shadow-md">
              NEW
            </div>
          </div>
          <!-- Product Details -->
          <div class="p-6">
            <!-- Product Title -->
            <h3 class="text-xl font-bold uppercase tracking-wide truncate">
              <%= product.productName %>
            </h3>
            <!-- Description -->
            <p class="text-sm text-gray-400 mt-2 line-clamp-2">
              <%= product.productDescription %>
            </p>
            <!-- Price and Ratings -->
            <div class="flex items-center justify-between mt-4">
              <p class="text-lg font-bold text-white">$<%= product.productPrice %>
              </p>
              <div class="flex items-center text-gray-400">
                <!-- Star Icon -->
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" viewBox="0 0 20 20"
                  fill="currentColor">
                  <path
                    d="M9.049 2.927a1 1 0 011.902 0l1.518 4.674a1 1 0 00.95.69h4.813c.969 0 1.371 1.24.588 1.81l-3.89 2.828a1 1 0 00-.364 1.118l1.518 4.674c.3.921-.755 1.688-1.54 1.118l-3.89-2.828a1 1 0 00-1.176 0l-3.89 2.828c-.784.57-1.839-.197-1.54-1.118l1.518-4.674a1 1 0 00-.364-1.118L2.17 10.1c-.783-.57-.38-1.81.588-1.81h4.812a1 1 0 00.951-.69l1.518-4.674z" />
                </svg>
                <span class="ml-1 text-sm">(4.8)</span>
              </div>
            </div>
            <form action="/cart" method="post">
              <button type="submit"
                class="w-full bg-white text-black text-sm font-bold py-2 rounded mt-6 hover:bg-gray-800 hover:text-white transition">
                Add to Cart
              </button>
              <input type="hidden" value="<%=product.productId  %>" name="productId">
            </form>
          </div>
        </div>
        <% }) %>
    </div>
</body>

</html>